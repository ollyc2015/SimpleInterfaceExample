<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/example_one_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".example1.ExampleOneFragment">

    <Button
        android:id="@+id/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="231dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="63dp"
        android:text="Click Me!"
        app:layout_constraintBottom_toTopOf="@+id/example_two_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/example_two_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="54dp"
        android:text="Go To Example 2"
        app:layout_constraintBottom_toTopOf="@+id/example_three_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello_world" />

    <Button
        android:id="@+id/example_three_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="208dp"
        android:text="Go to Example 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/example_two_button" />

</androidx.constraintlayout.widget.ConstraintLayout>